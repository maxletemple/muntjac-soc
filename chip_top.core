CAPI=2:
# SPDX-License-Identifier: MIT OR Apache-2.0
name: "garyguo.net:systems:muntjac_soc:0.1"
description: "Muntjac SoC toplevel"
filesets:
  files_rtl:
    depend:
      - lowrisc:muntjac:core
      - lowrisc:tl:axi_adapter
      - lowrisc:tl:axi_lite_adapter
      - lowrisc:axi:common
      - lowrisc:axi_lite:common
      - lowrisc:tl:adapter_bram
      - garyguo.net:peripheral:sdhci
      - lowrisc:tl:socket_m1
      - lowrisc:tl:socket_1n
      - lowrisc:muntjac:llc
      - lowrisc:tl:adapter
      - lowrisc:tl:ram_terminator
      - lowrisc:tl:io_terminator
      - lowrisc:tl:error_sink
    files:
      - rtl/spi.sv
      - rtl/uart.sv
      - rtl/sdhci.sv
      - rtl/ccx.sv
      - rtl/uncore/clint.sv
      - rtl/uncore/clint_tl.sv
      - rtl/uncore/plic.sv
      - rtl/uncore/plic_tl.sv
    file_type: systemVerilogSource

  files_rtl_nexys_a7:
    files:
      - rtl/chip_top.sv
      - rtl/ddr.sv
    file_type: systemVerilogSource

  files_rtl_genesys_2:
    files:
      - rtl/chip_top_genesys_2.sv
      - rtl/ddr_genesys_2.sv
    file_type: systemVerilogSource

  files_constraints_nexys_a7:
    files:
      - data/clocks.xdc
      - data/pins_nexys_a7.xdc
    file_type: xdc

  files_constraints_genesys_2:
    files:
      - data/clocks_genesys_2.xdc
      - data/pins_genesys_2.xdc
    file_type: xdc

  files_tcl_nexys_a7:
    files:
      - util/vivado_create_ip.tcl
      # File copied by fusesoc into the workroot
      - data/mig.prj: { file_type: user, copyto: mig.prj }
    file_type: tclSource

  files_tcl_genesys_2:
    files:
      - util/vivado_create_ip_genesys_2.tcl
      # File copied by fusesoc into the workroot
      - data/mig_genesys_2.prj: { file_type: user, copyto: mig.prj }
    file_type: tclSource

parameters:
  PRIM_DEFAULT_IMPL:
    datatype: str
    paramtype: vlogdefine
    description: Primitives implementation to use, e.g. "prim_pkg::ImplGeneric".

targets:
  default: &default_target
    filesets:
      - files_rtl
    toplevel: chip_top

  nexys_a7:
    default_tool: vivado
    filesets:
      - files_rtl
      - files_rtl_nexys_a7
      - files_constraints_nexys_a7
      - files_tcl_nexys_a7
    toplevel: chip_top
    parameters:
      - PRIM_DEFAULT_IMPL=prim_pkg::ImplXilinx
    tools:
      vivado:
        part: "xc7a100tcsg324-1"

  genesys_2:
    default_tool: vivado
    filesets:
      - files_rtl
      - files_rtl_genesys_2
      - files_constraints_genesys_2
      - files_tcl_genesys_2
    toplevel: chip_top
    parameters:
      - PRIM_DEFAULT_IMPL=prim_pkg::ImplXilinx
    tools:
      vivado:
        part: "xc7k325tffg900-2"
